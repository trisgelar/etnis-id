# Ethnicity Detection System Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# DATASET CONFIGURATION
# =============================================================================
DATASET_DIR=../dataset/dataset_periorbital
DATASET_HOLISTIC_DIR=../dataset/dataset_holistik
DATASET_PERIORBITAL_DIR=../dataset/dataset_periorbital
ETHNICITIES=Banjar,Bugis,Javanese,Malay,Sundanese
IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.bmp
MAX_IMAGES_PER_CLASS=1000
TRAIN_SPLIT=0.8
VAL_SPLIT=0.1
TEST_SPLIT=0.1
DATASET_RANDOM_SEED=42

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODEL_TYPE=RandomForest
MODEL_PATH=model_ml/pickle_model.pkl
MODEL_N_ESTIMATORS=200
MODEL_MAX_DEPTH=
MODEL_MIN_SAMPLES_SPLIT=2
MODEL_MIN_SAMPLES_LEAF=1
MODEL_MAX_FEATURES=sqrt
MODEL_CLASS_WEIGHT=
MODEL_RANDOM_STATE=42
MODEL_N_JOBS=-1
MODEL_BOOTSTRAP=true
MODEL_OOB_SCORE=false
MODEL_VERBOSE=0

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================
TRAINING_BATCH_SIZE=32
TRAINING_EPOCHS=100
TRAINING_LEARNING_RATE=0.001
TRAINING_EARLY_STOPPING_PATIENCE=10
TRAINING_SAVE_BEST_ONLY=true
TRAINING_MONITOR_METRIC=val_accuracy
TRAINING_MODE=max
TRAINING_VERBOSE=1
TRAINING_RANDOM_SEED=42

# =============================================================================
# CROSS-VALIDATION CONFIGURATION
# =============================================================================
CV_N_FOLDS=6
CV_TEST_SIZE=0.2
CV_RANDOM_STATE=42
CV_SCORING=accuracy
CV_SHUFFLE=true
CV_STRATIFY=true
CV_RETURN_TRAIN_SCORE=false
CV_N_JOBS=-1
CV_VERBOSE=0
CV_PRE_DISPATCH=2*n_jobs

# =============================================================================
# FEATURE EXTRACTION CONFIGURATION
# =============================================================================
# GLCM Configuration
GLCM_DISTANCES=1
GLCM_ANGLES=0,45,90,135
GLCM_LEVELS=256
GLCM_SYMMETRIC=true
GLCM_NORMED=true

# Color Histogram Configuration
COLOR_BINS=16
COLOR_CHANNELS=1,2
COLOR_SPACE=HSV

# Image Preprocessing
IMAGE_SIZE=256,256
RESIZE_METHOD=cv2
NORMALIZE_IMAGES=true

# Feature Scaling
SCALE_FEATURES=true
SCALER_TYPE=StandardScaler

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/training.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_CONSOLE_OUTPUT=true
LOG_FILE_OUTPUT=true
LOG_ENCODING=utf-8

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_DEBUG=false
SERVER_MAX_CONNECTIONS=100
SERVER_TIMEOUT=30
SERVER_KEEP_ALIVE=true
SERVER_CORS_ENABLED=true
SERVER_CORS_ORIGINS=*

# =============================================================================
# VISUALIZATION CONFIGURATION
# =============================================================================
VIZ_OUTPUT_DIR=logs/analysis
VIZ_FIGURE_DPI=300
VIZ_FIGURE_SIZE=12,8
VIZ_STYLE=default
VIZ_COLOR_PALETTE=husl
VIZ_FONT_SIZE=12
VIZ_SAVE_FORMAT=png
VIZ_SHOW_PLOTS=false
VIZ_SCIENCE_PLOTS=true
VIZ_BACKGROUND_COLOR=white

# =============================================================================
# DEVELOPMENT/DEBUGGING CONFIGURATION
# =============================================================================
DEBUG=false
VERBOSE=false
PROFILE=false
MEMORY_PROFILING=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
NUM_WORKERS=4
PREFETCH_FACTOR=2
PIN_MEMORY=true
NON_BLOCKING=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOW_CREDENTIALS=true
